<%= form_with(url: search_path, local: true,  method: "get", :class => "form-control mr-sm-2") do %>
  <%= text_field_tag(:search_term) %>
  <%= select_tag :category, options_from_collection_for_select(@cats, 'id', 'name'), :class => "btn btn-secondary dropdown-toggle" %>
  <%= submit_tag("Search", :class => "btn btn-outline-success my-2 my-sm-0") %>
<% end %>